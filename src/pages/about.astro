---
import Layout from '../layouts/Layout.astro';

const team = [
    {
        name: 'Lucas Aguirre',
        role: 'Fullstack Developer',
        skills: ['Backend', 'Frontend', 'PostgreSQL', 'Supabase', 'Next.js', 'Tailwind'],
        github: 'https://github.com/LucasArielAguirre',
        cv: 'src/assets/cv/lucas-aguirre.pdf',
        initials: 'LA',
        bgColor: 'bg-gradient-to-br from-blue-500 via-blue-600 to-blue-700'
    },
    {
        name: 'Gabriel Blanco',
        role: 'Fullstack Developer',
        skills: ['Backend', 'Frontend', 'PostgreSQL', 'Supabase', 'Next.js', 'Tailwind'],
        github: 'https://github.com/blancogabriel01',
        cv: 'src/assets/cv/gabriel-blanco.pdf',
        initials: 'GB',
        bgColor: 'bg-gradient-to-br from-emerald-500 via-emerald-600 to-emerald-700'
    },
    {
        name: 'Martin Diaz',
        role: 'Fullstack Developer',
        skills: ['Backend', 'Frontend', 'PostgreSQL', 'Supabase', 'Next.js', 'Tailwind'],
        github: 'https://github.com/martindiaz20',
        cv: 'src/assets/cv/martin-diaz.pdf',
        initials: 'MD',
        bgColor: 'bg-gradient-to-br from-purple-500 via-purple-600 to-purple-700'
    },
    {
        name: 'Agustin Reynals',
        role: 'Fullstack Developer',
        skills: ['Backend', 'Frontend', 'PostgreSQL', 'Supabase', 'Next.js', 'Tailwind'],
        github: 'https://github.com/AgustinReynals',
        cv: 'src/assets/cv/agustin-reynals.pdf',
        initials: 'AR',
        bgColor: 'bg-gradient-to-br from-orange-500 via-orange-600 to-orange-700'
    }
];
---

<Layout>
    <main class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50/30 to-white text-slate-900 overflow-x-hidden">
         <nav class="bg-white/95 backdrop-blur-md shadow-lg sticky top-0 z-50 border-b border-gray-100">
	<div class="container mx-auto px-4 py-4 flex justify-between items-center">
	  <div class="flex items-center space-x-3">
	   
		<span class="font-bold text-2xl bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Equilibrium</span>
	  </div>
	  <div class="hidden md:flex space-x-8">
		<a href="/" class="text-gray-700 hover:text-indigo-600 transition duration-300 font-medium flex items-center space-x-1">
		  <i class="fa-solid fa-star text-xs"></i>
		  <span>Features</span>
		</a>
		<a href="/" class="text-gray-700 hover:text-indigo-600 transition duration-300 font-medium flex items-center space-x-1">
		  <i class="fa-solid fa-newspaper text-xs"></i>
		  <span>Blog</span>
		</a>
		<a href="/" class="text-gray-700 hover:text-indigo-600 transition duration-300 font-medium flex items-center space-x-1">
		  <i class="fa-solid fa-circle-question text-xs"></i>
		  <span>FAQ</span>
		</a>
		<a href="/" class="text-gray-700 hover:text-indigo-600 transition duration-300 font-medium flex items-center space-x-1">
		  <i class="fa-solid fa-tag text-xs"></i>
		  <span>Pricing</span>
		   <a href="about" class="text-gray-700 hover:text-indigo-600 transition duration-300 font-medium flex items-center space-x-1">
		  <i class="fa-solid fa-circle-question text-xs"></i>
		  <span>About us</span>
		</a>
		</a>
	  </div>
	  <div class="flex space-x-3">
		<a href="login.html" class="hidden md:flex items-center space-x-2 text-indigo-600 border-2 border-indigo-600 px-5 py-2.5 rounded-xl hover:bg-indigo-50 transition duration-300 font-medium">
		  <i class="fa-solid fa-right-to-bracket"></i>
		  <span>Sign In</span>
		</a>
		<a href="register.html" class="flex items-center space-x-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-5 py-2.5 rounded-xl hover:shadow-lg transform hover:-translate-y-0.5 transition duration-300 font-medium">
		  <i class="fa-solid fa-user-plus"></i>
		  <span>Sign Up</span>
		</a>
	  </div>
	</div>
  </nav>
        <!-- Hero Section -->
        <section class="relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/8 via-purple-600/5 to-emerald-600/8"></div>
            <div class="absolute top-20 left-10 w-72 h-72 bg-blue-400/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-400/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
            
            <div class="container mx-auto px-6 py-20 relative">
                <div class="text-center max-w-5xl mx-auto">
                    <div class="inline-block p-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full mb-8 animate-fade-up">
                        <div class="bg-white rounded-full px-6 py-2">
                            <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent font-semibold text-sm">
                                Meet Our Team
                            </span>
                        </div>
                    </div>
                    
                    <h1 class="text-5xl md:text-7xl font-black bg-gradient-to-r from-blue-600 via-purple-600 to-emerald-600 bg-clip-text text-transparent mb-8 animate-fade-up leading-tight">
                        About Our Team
                    </h1>
                    <p class="text-xl md:text-2xl text-slate-600 leading-relaxed animate-fade-up max-w-3xl mx-auto" style="animation-delay: 0.2s;">
                        We are a team of four dedicated developers specializing in both 
                        <span class="text-blue-600 font-semibold">backend</span> and 
                        <span class="text-purple-600 font-semibold">frontend</span> development.
                    </p>
                </div>
            </div>
        </section>

        <!-- Product Info Section -->
        <section class="py-24 bg-gradient-to-b from-white to-slate-50/50 relative">
            <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
            <div class="container mx-auto px-6 relative">
                <div class="grid lg:grid-cols-2 gap-16 items-center">
                    <div class="space-y-8">
                        <div class="space-y-4">
                            <span class="inline-block bg-gradient-to-r from-blue-100 to-purple-100 text-blue-700 px-4 py-2 rounded-full text-sm font-semibold">
                                Our Product
                            </span>
                            <h2 class="text-4xl md:text-5xl font-bold text-slate-900 leading-tight">
                                Personal Finance
                                <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                                    Platform
                                </span>
                            </h2>
                        </div>
                        
                        <p class="text-lg text-slate-600 leading-relaxed">
                            This landing page showcases our personal finance product where users will have access to 
                            interactive charts and resources to improve their financial health through analysis, 
                            budgeting, and personalized recommendations.
                        </p>
                        
                        <div class="space-y-6">
                            <h3 class="text-xl font-bold text-slate-800 flex items-center gap-2">
                                <div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></div>
                                Key Technologies
                            </h3>
                            <div class="flex flex-wrap gap-3">
                                {['SQL', 'Supabase', 'Next.js', 'React', 'TypeScript'].map(tech => (
                                    <span class="group bg-gradient-to-r from-blue-50 to-purple-50 text-blue-700 px-5 py-3 rounded-2xl text-sm font-semibold border border-blue-100 hover:border-blue-300 transition-all duration-300 hover:scale-105 hover:shadow-lg">
                                        {tech}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </div>
                    
                    <div class="relative">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20 rounded-3xl blur-2xl transform rotate-6"></div>
                        <div class="relative bg-gradient-to-br from-white to-blue-50/50 rounded-3xl p-8 shadow-2xl transform transition duration-700 hover:scale-[1.02] border border-blue-100/50 backdrop-blur-sm">
                         <video 
  src="/"
  poster="/images/dashboard-poster.jpg"
  autoplay loop playsinline controls
  class="w-full h-72 object-cover rounded-2xl shadow-xl animate-fade-up ring-1 ring-slate-200">
</video>
                            <div class="mt-8 text-center">
                                <p class="text-slate-600 leading-relaxed">
                                    Intuitive dashboard featuring financial metrics, growth charts, and educational 
                                    resources to improve spending habits and savings.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="py-28 bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/20 relative overflow-hidden">
            <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-400/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-400/10 rounded-full blur-3xl"></div>
            
            <div class="container mx-auto px-6 relative">
                <div class="text-center mb-20">
                    <span class="inline-block bg-gradient-to-r from-blue-100 to-purple-100 text-blue-700 px-6 py-3 rounded-full text-sm font-semibold mb-6">
                        Our Team
                    </span>
                    <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
                        Meet Our
                        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            Developers
                        </span>
                    </h2>
                    <p class="text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed">
                        Passionate developers committed to creating exceptional digital experiences
                    </p>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    {team.map((member, i) => (
                        <article class="group bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl hover:shadow-2xl transform transition-all duration-700 hover:-translate-y-3 border border-slate-100/50 relative overflow-hidden"
                                 style={`animation: fadeUp 0.8s ease ${i * 0.2}s both;`}>
                            
                            <!-- Gradient overlay -->
                            <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-blue-50/30 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-3xl"></div>
                            
                            <!-- Avatar -->
                            <div class="flex justify-center mb-8 relative">
                                <div class="relative">
                                    <div class={`w-24 h-24 rounded-2xl ${member.bgColor} flex items-center justify-center text-white text-2xl font-bold shadow-2xl ring-4 ring-white transform transition-all duration-500 group-hover:scale-110 group-hover:rotate-3`}>
                                        {member.initials}
                                    </div>
                                    <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                </div>
                            </div>

                            <!-- Info -->
                            <div class="text-center mb-8 relative">
                                <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-blue-700 transition-colors duration-300">
                                    {member.name}
                                </h3>
                                <p class="text-slate-500 font-medium text-sm bg-slate-100 px-3 py-1 rounded-full inline-block">
                                    {member.role}
                                </p>
                            </div>

                            <!-- Skills -->
                            <div class="mb-8 relative">
                                <div class="flex flex-wrap gap-2 justify-center">
                                    {member.skills.map(skill => (
                                        <span class="text-xs bg-gradient-to-r from-slate-100 to-blue-50 text-slate-700 px-3 py-2 rounded-xl font-medium border border-slate-200 hover:border-blue-300 hover:bg-blue-50 hover:text-blue-700 transition-all duration-300 hover:scale-105">
                                            {skill}
                                        </span>
                                    ))}
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="flex gap-3 relative">
                                <a href={member.github} 
                                   target="_blank" 
                                   rel="noopener noreferrer" 
                                   class="flex-1 inline-flex items-center justify-center gap-2 bg-slate-900 text-white px-4 py-3 rounded-xl hover:bg-slate-800 transition-all duration-300 text-sm font-semibold group/btn shadow-lg hover:shadow-xl transform hover:scale-105">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover/btn:scale-110 transition-transform duration-300" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 .5C5.73.5.88 5.36.88 11.63c0 4.79 3.11 8.85 7.43 10.29.54.1.74-.24.74-.52 0-.26-.01-.95-.01-1.86-3.02.66-3.66-1.46-3.66-1.46-.5-1.27-1.22-1.61-1.22-1.61-.99-.68.08-.67.08-.67 1.1.08 1.67 1.13 1.67 1.13.98 1.68 2.57 1.19 3.2.91.1-.71.38-1.19.69-1.46-2.41-.27-4.95-1.21-4.95-5.39 0-1.19.43-2.16 1.13-2.92-.11-.28-.49-1.42.11-2.96 0 0 .92-.29 3.02 1.12a10.5 10.5 0 012.75-.37c.93 0 1.87.13 2.75.37 2.09-1.41 3.01-1.12 3.01-1.12.6 1.54.22 2.68.11 2.96.7.76 1.12 1.73 1.12 2.92 0 4.19-2.54 5.12-4.96 5.39.39.34.73 1.01.73 2.04 0 1.47-.01 2.65-.01 3.01 0 .29.19.63.75.52 4.31-1.44 7.41-5.5 7.41-10.29C23.12 5.36 18.27.5 12 .5z"/>
                                    </svg>
                                    GitHub
                                </a>

                                <a href={member.cv} 
                                   download 
                                   class="flex-1 inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-3 rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 text-sm font-semibold group/btn shadow-lg hover:shadow-xl transform hover:scale-105">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover/btn:scale-110 transition-transform duration-300" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 3a1 1 0 0 1 1 1v8.59l2.3-2.3a1 1 0 1 1 1.4 1.42l-4 4a1 1 0 0 1-1.4 0l-4-4a1 1 0 0 1 1.4-1.42L11 12.59V4a1 1 0 0 1 1-1zM5 18a1 1 0 0 1 1-1h12a1 1 0 1 1 0 2H6a1 1 0 0 1-1-1z"/>
                                    </svg>
                                    CV
                                </a>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>
    </main>

    <style is:global>
        @keyframes fadeUp {
            from { 
                opacity: 0; 
                transform: translateY(40px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }

        .animate-fade-up {
            animation: fadeUp 1s ease both;
        }

        .bg-grid-pattern {
            background-image: radial-gradient(circle, #e2e8f0 1px, transparent 1px);
            background-size: 20px 20px;
        }

        /* Enhanced focus styles */
        a:focus {
            outline: 3px solid rgba(59, 130, 246, 0.4);
            outline-offset: 3px;
            border-radius: 12px;
        }

        /* Custom scrollbar with gradients */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: linear-gradient(to bottom, #f1f5f9, #e2e8f0);
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(to bottom, #3b82f6, #8b5cf6);
            border-radius: 5px;
            border: 2px solid #f1f5f9;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to bottom, #2563eb, #7c3aed);
        }

        /* Smooth transitions for all interactive elements */
        * {
            transition-property: color, background-color, border-color, text-decoration-color, fill, stroke, opacity, box-shadow, transform, filter, backdrop-filter;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        }
    </style>
</Layout>